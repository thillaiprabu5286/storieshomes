<?xml version="1.0"?>
<layout version="0.1.0">
    <default>
    </default>
    <catalog_product_view>
		<reference name="head">
			<action method="addCss" ifconfig="cloudzoom/general/thumbslider"><stylesheet>themevast/plugin/css/jquery.bxslider.css</stylesheet></action>
            <action method="addCss" ifconfig="cloudzoom/general/enabled"><stylesheet>themevast/cloudzoom/css/cloudzoom.css</stylesheet></action>
			<action method="addJs" ifconfig="cloudzoom/general/enabled"><script>themevast/jquery.min.js</script></action>
			<action method="addJs" ifconfig="cloudzoom/general/thumbslider"><script>themevast/plugin/jquery.bxslider.js</script></action>
			<action method="addJs" ifconfig="cloudzoom/general/enabled"><script>themevast/plugin/cloud-zoom.1.0.3.js</script></action>
			<action method="addJs" ifconfig="cloudzoom/general/enabled"><script>themevast/plugin/lightbox.js</script></action>
			<block type="page/html" name="top.Js" as="topJs" template="themevast/cloudzoom/jscfg.phtml"/>
        </reference>
        <reference name="product.info.media">
           <action method="setTemplate" ifconfig="cloudzoom/general/enabled"><template>themevast/cloudzoom/media.phtml</template></action>
        </reference>
    </catalog_product_view>
	<review_product_list translate="label">
		<reference name="head">
			<action method="addCss" ifconfig="cloudzoom/general/thumbslider"><stylesheet>themevast/plugin/css/jquery.bxslider.css</stylesheet></action>
            <action method="addCss" ifconfig="cloudzoom/general/enabled"><stylesheet>themevast/cloudzoom/css/cloudzoom.css</stylesheet></action>  
			<action method="addJs" ifconfig="cloudzoom/general/thumbslider"><script>themevast/jquery.min.js</script></action> 
			<action method="addJs" ifconfig="cloudzoom/general/enabled"><script>themevast/plugin/cloud-zoom.1.0.3.js</script></action>
			<action method="addJs" ifconfig="cloudzoom/general/enabled"><script>themevast/plugin/lightbox.js</script></action>
        </reference>
        <reference name="product.info.media">
           <action method="setTemplate" ifconfig="cloudzoom/general/enabled"><template>themevast/cloudzoom/media.phtml</template></action>
        </reference>
	</review_product_list>
</layout> 

