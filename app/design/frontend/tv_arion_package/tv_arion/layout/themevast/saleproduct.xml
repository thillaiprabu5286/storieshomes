<?xml version="1.0"?>
<layout version="0.1.0">
    <cms_index_index>
        <reference name="content">
            <!--<block type="saleproduct/saleproduct" name="saleproduct" template="themevast/saleproduct/saleproduct.phtml" />-->
        </reference>
    </cms_index_index>
    <saleproduct_index_index>
        <reference name="root">
            <action method="setTemplate"><template>page/2columns-left.phtml</template></action>
        </reference>
        <reference name="left">
            <block type="blog/menu_sidebar" name="left.blog.menu"  after="vmegamenu">
                <action method="setTemplate" ifconfig="blog/menu/left">
                    <template>themevast/blog/menu.phtml</template>
                </action>
                <block type="blog/tags" name="blog_tags" />
            </block>
            <block type="page/html" name="banner.left" after="-" template="themevast/banner_left.phtml"/>
        </reference>
        <reference name="content">
            <block type="saleproduct/product_list" name="saleproduct_list" template="catalog/product/list.phtml">
                <block type="catalog/product_list_toolbar" name="product_list_toolbar" template="catalog/product/list/toolbar.phtml">
                        <block type="page/html_pager" name="product_list_toolbar_pager"/>
                </block>
                <action method="setToolbarBlockName"><name>product_list_toolbar</name></action>
            </block>
        </reference>
    </saleproduct_index_index>
</layout> 

