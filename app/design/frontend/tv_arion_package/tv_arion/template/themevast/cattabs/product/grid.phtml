<?php
/**
 * Product list template
 *
 * @see Mage_Catalog_Block_Product_List
 */
?>
<?php
    $_productCollection=$this->getLoadedProductCollection();
    $_helper = $this->helper('catalog/output');
?>
<?php if(!$_productCollection->count()): ?>
<p class="note-msg"><?php echo $this->__('There are no products matching the selection.') ?></p>
<?php else: ?>
<div class="category-products mage-cattabs">
    <?php
        // // getConfig
        $widthImage = (int) $this->getRequest()->getPost('widthImage');
        $heightImage = (int) $this->getRequest()->getPost('heightImage');
        $price          = $this->getConfig('price');
        $cart           = $this->getConfig('cart');
        $compare        = $this->getConfig('compare');
        $wishlist       = $this->getConfig('wishlist');
        $review         = $this->getConfig('review');
        // $rows           = $this->getConfig('rows');
        // $class          = ($rows > 1) ? '.slide-multirows' : '.products-grid';
    ?>
    <?php $_collectionSize = $_productCollection->count() ?>
    <?php $_columnCount = $_productCollection->count(); //$this->getColumnCount(); ?>
    <?php $j=0; $time = $this->getPlayDelay(); ?>
    <?php $i=0; foreach ($_productCollection as $_product): ?>
        <?php $t = $j*$time; $t .='ms'; $j++; ?>
        <?php if ($i++%$_columnCount==0): ?>
        <ul class="products-grid pdt-list zoomOut play">
        <?php endif ?>
            <li style="<?php echo "-webkit-animation-delay:$t;-moz-animation-delay:$t;-o-animation-delay:$t;animation-delay:$t" ?>;" class="item<?php if(($i-1)%$_columnCount==0): ?> first<?php elseif($i%$_columnCount==0): ?> last<?php endif; ?> item-animate">
                <div class="item-inner">
                    <div class="box-images">
                        <a href="<?php echo $_product->getProductUrl() ?>" class="product-image"><img src="<?php echo $this->helper('catalog/image')->init($_product, 'small_image')->resize($widthImage, $heightImage); ?>" width="<?php echo $widthImage ?>" height="<?php echo $heightImage ?>" alt="<?php echo $this->stripTags($this->getImageLabel($_product, 'small_image'), null, true) ?>" /></a>
                        
                    </div>
                    
                        
                        
                            <?php if($compare || $wishlist): ?>
                                <ul class="add-to-links">
                                    <?php if($cart): ?>
                                        <?php if($_product->isSaleable()): ?>
                                            <li class="button1"><button type="button" title="<?php echo $this->__('Add to Cart') ?>" class="button btn-cart" onclick="setLocation('<?php echo $this->getAddToCartUrl($_product) ?>')"><span><span><?php //echo $this->__('Add to Cart') ?><i class="fa fa-shopping-cart"></i></span></span></button></li>
                                        <?php else: ?>
                                            <li class="button1"><p class="availability out-of-stock"><span><?php echo $this->__('Out of stock') ?></span></p></li>
                                        <?php endif; ?>
                                    <?php endif; ?>
                                    <?php if($compare): ?>
                                        <?php if($_compareUrl=$this->getAddToCompareUrl($_product)): ?>
                                            <li><a href="<?php echo $_compareUrl ?>" class="link-compare" title="Add to Compare"><?php //echo $this->__('Add to Compare') ?><i class="fa fa-refresh"></i></a></li>
                                        <?php endif; ?>
                                    <?php endif; ?>
                                    <?php if($wishlist): ?>
                                        <?php if ($this->helper('wishlist')->isAllow()) : ?>
                                            <li><a href="<?php echo $this->helper('wishlist')->getAddUrl($_product) ?>" class="link-wishlist" title="Add to Wishlist"><i class="fa fa-heart"></i><?php //echo $this->__('Add to Wishlist') ?></a></li>
                                        <?php endif; ?>
                                    <?php endif; ?>
                                    
                                </ul>
                                
                            <?php endif; ?>
                         
                    
                    <?php $_productNameStripped = $this->stripTags($_product->getName(), null, true); ?>
                        <div class="product-shop1">
                            <h2 class="product-name"><a href="<?php echo $_product->getProductUrl() ?>" title="<?php echo $_productNameStripped; ?>"><?php echo $_helper->productAttribute($_product, $_product->getName() , 'name'); ?></a></h2>
                            <?php if($review): ?>
                                    <?php echo $this->getReviewsSummaryHtml($_product) ?>
                                <?php endif; ?>
                            <?php if($price): ?>
                            <?php echo $this->getPriceHtml($_product, true) ?>
                        <?php endif; ?>
                        </div>
                </div>
            </li>
        <?php if ($i%$_columnCount==0 || $i==$_collectionSize): ?>
        </ul>
        <?php endif ?>
        <?php endforeach ?>
        <script type="text/javascript">decorateGeneric($$('ul.products-grid'), ['odd','even','first','last'])</script>
</div>
<?php endif; ?>
