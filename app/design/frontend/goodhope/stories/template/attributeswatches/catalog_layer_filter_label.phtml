$_settings = Mage::getStoreConfig("attributeswatches/layerednavigation");
$_dimensions = "height: " . $_settings["swatch_height"]  . "px !important;line-height: " . $_settings["swatch_height"]  . "px !important;";

$_model = $this->getAttributeModel();
if ($_model)
    $_code = $_model->getAttributeCode();
?>
<ol id="layered-navigation-<?php echo $_code; ?>" class="swatches show-label-only">
    <?php foreach ($this->getItems() as $_item): ?>
        <li>
            <?php if ($_item->getCount() > 0): ?>
                <a title="<?php echo $_item->getLabel() ?>" href="<?php echo $this->urlEscape($_item->getUrl()) ?>" style="<?php echo $_dimensions;?>">
                <?php endif; ?>
                    <span class="layered-navigation-item-label"><?php echo $_item->getLabel() ?></span>
                <?php if ($_item->getCount() > 0): ?>
                </a>
            <?php endif; ?>
        </li>
    <?php endforeach ?>
</ol>
