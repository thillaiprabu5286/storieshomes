<config>
    <modules>
        <Mango_Attributemapping>
            <version>0.1.0</version>
        </Mango_Attributemapping>
    </modules>
    <frontend>
        <routers>
            <attributemapping>
                <use>standard</use>
                <args>
                    <module>Mango_Attributemapping</module>
                    <frontName>attributemapping</frontName>
                </args>
            </attributemapping>
        </routers>
        <layout>
            <updates>
                <attributemapping>
                    <file>attributemapping.xml</file>
                </attributemapping>
            </updates>
        </layout>
        <events>
            <core_block_abstract_prepare_layout_after>
                <observers>
                    <attributemapping_layer_block>
                        <type>singleton</type>
                        <class>attributemapping/observer</class>
                        <method>templateForLayeredNavigationFilter</method>
                    </attributemapping_layer_block>
                </observers>
            </core_block_abstract_prepare_layout_after>
        </events>
    </frontend>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <Mango_Attributemapping after="Mage_Adminhtml">Mango_Attributemapping_Adminhtml</Mango_Attributemapping>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <menu>
            <catalog>
                <children>
                    <attributes>
                        <children>
                            <attributemapping module="attributemapping">
                                <title>Attributes Mapping</title>
                                <sort_order>1000</sort_order>
                                <action>adminhtml/attributemapping</action>
                            </attributemapping>
                        </children>
                    </attributes>
                </children>
            </catalog>
        </menu>
        <acl>
            <resources>
                <all>
                    <title>Allow Everything</title>
                </all>
                <admin>
                    <children>
                        <attributemapping>
                            <title>Color Swatches</title>
                            <sort_order>10</sort_order>
                            <children>
                                <swatchesitems>
                                    <title>Manage Items</title>
                                    <sort_order>10</sort_order>
                                </swatchesitems>
                            </children>
                        </attributemapping>
                    </children>
                </admin>
            </resources>
        </acl>
        <layout>
            <updates>
                <attributemapping>
                    <file>attributemapping.xml</file>
                </attributemapping>
            </updates>
        </layout>
    </adminhtml>
    <global>
        <models>
            <attributemapping>
                <class>Mango_Attributemapping_Model</class>
                <resourceModel>attributemapping_mysql4</resourceModel>
            </attributemapping>
            <attributemapping_mysql4>
                <class>Mango_Attributemapping_Model_Mysql4</class>
                <entities>
                    <attributemapping>
                        <table>attributemapping</table>
                    </attributemapping>
                </entities>
            </attributemapping_mysql4>
        </models>
        <resources>
            <attributemapping_setup>
                <setup>
                    <module>Mango_Attributemapping</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </attributemapping_setup>
            <attributemapping_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </attributemapping_write>
            <attributemapping_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </attributemapping_read>
        </resources>
        <blocks>
            <attributemapping>
                <class>Mango_Attributemapping_Block</class>
            </attributemapping>
        </blocks>
        <helpers>
            <attributemapping>
                <class>Mango_Attributemapping_Helper</class>
            </attributemapping>
        </helpers>
    </global>
</config>