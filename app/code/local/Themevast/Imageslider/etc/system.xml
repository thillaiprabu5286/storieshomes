<?xml version="1.0"?>
<config>
	<tabs>
		<themevast translate="label" module="imageslider">
			<label>Themevast</label>
			<sort_order>100</sort_order>
		</themevast>
	</tabs>
	<sections>
		<imageslider translate="label" module="imageslider">
			<label>Image Slider</label>
			<tab>themevast</tab>
			<sort_order>130</sort_order>
			<show_in_default>1</show_in_default>
			<show_in_website>1</show_in_website>
			<show_in_store>1</show_in_store>
			<groups>
				<general translate="label">
					<label>Images Slider</label>
					<frontend_type>text</frontend_type>
					<sort_order>1</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<fields>
						<enabled translate="label comment">
							<label>Enabled: </label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>10</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>							
						</enabled>
                        <effect translate="label">
                            <label>Effect Type: </label>
                            <frontend_type>select</frontend_type>
                            <source_model>imageslider/config_effect</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </effect>
                        <pauseTime translate="label">
                            <label>Pause Time: </label>
                            <frontend_type>text</frontend_type>
                            <validate>required-entry validate-greater-than-zero</validate>
							<comment>Set the speed of the slideshow cycling, in milliseconds</comment>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </pauseTime>
						<animSpeed>
							<label>Animation Speed: </label>
							<frontend_type>text</frontend_type>
							<validate>required-entry validate-greater-than-zero</validate>
							<comment>Set the speed of animations, in milliseconds</comment>
							<sort_order>32</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_store>1</show_in_store>
							<show_in_website>1</show_in_website>
						</animSpeed>
						<caption translate="label comment">
							<label>Show Caption:</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>37</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>							
						</caption>	
						<directionNav translate="label">
							<label>Show Next/Back control: </label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>40</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</directionNav>
						<controlNav translate="label">
							<label>Show navigation control: </label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>42</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</controlNav>
					</fields>
				</general>						
			</groups>
		</imageslider>
	</sections>
</config>


