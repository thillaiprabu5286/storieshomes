<?xml version="1.0"?>
<config>
    <modules>
        <Themevast_Ajaxcart>
            <version>0.1.0</version>
        </Themevast_Ajaxcart>
    </modules>
    <frontend>
        <routers>
            <ajaxcart>
                <use>standard</use>
                <args>
                    <module>Themevast_Ajaxcart</module>
                    <frontName>ajaxcart</frontName>
                </args>
            </ajaxcart>
            <checkout>
                <args>
                    <modules>
                        <Themevast_Ajaxcart before="Mage_Checkout">Themevast_Ajaxcart</Themevast_Ajaxcart>
                    </modules>
                </args>
            </checkout>
           <catalog>
                <args>
                    <modules>
                        <Themevast_Ajaxcart before="Mage_Checkout">Themevast_Ajaxcart</Themevast_Ajaxcart>
                    </modules>
                </args>
            </catalog>
        </routers>
        <layout>
            <updates>
                <ajaxcart>
                    <file>themevast/ajaxcart.xml</file>
                </ajaxcart>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
			<ajaxcart>
				<use>admin</use>
				<args>
					<module>Themevast_Ajaxcart</module>
					<frontName>ajaxcart</frontName>
				</args>
			</ajaxcart>
        </routers>
    </admin>     
    <global>
        <blocks>
            <ajaxcart>
                <class>Themevast_Ajaxcart_Block</class>
            </ajaxcart>
        </blocks>
        <helpers>
            <ajaxcart>
                <class>Themevast_Ajaxcart_Helper</class>
            </ajaxcart>
        </helpers>
    </global>
    <default>
        <ajaxcart>
            <general>
                <enabled>1</enabled>
                <loading_image>default/loader.gif</loading_image>
                <bg_opacity>0.7</bg_opacity>
                <loading_bg>black</loading_bg>
                <show_confirm>1</show_confirm>
            </general>
        </ajaxcart>
    </default>
</config>

